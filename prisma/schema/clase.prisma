model Clase {
    id              String      @id
    profesor        String
    nombre          String
    descripcion     String?
    pistaNombre     String?
    creadaPorUserId String      @db.Uuid
    fecha           DateTime
    estado          EstadoClase @default(Disponible)

    creadaPor Usuario   @relation("creador", fields: [creadaPorUserId], references: [id])
    alumnos   Usuario[] @relation("alumnos")

    pista Pista? @relation(fields: [pistaNombre], references: [nombre])
}

enum EstadoClase {
    Disponible
    EnProceso
    Finalizada
    Cancelada
}
