model Socio {
    id       String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    nombre   String
    dni      String
    email    String?
    telefono String?
    rol      Rol     @default(Socio)

    credencial     Credencial?
    sesiones       Session[]

    @@unique([id, dni])
    Reserva Reserva[]
}

enum Rol {
    Administrador
    Socio
}

model Credencial {
    socioId  String @id @db.Uuid
    dni      String @unique
    password String @db.VarChar(1023)

    socio Socio @relation(fields: [socioId], references: [id])
}
