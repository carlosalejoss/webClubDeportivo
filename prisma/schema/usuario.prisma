model Usuario {
    id       String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
    nombre   String
    dni      String
    email    String?
    telefono String?
    rol      Rol     @default(Usuario)

    credencial     Credencial?
    datosSocio     SocioDatos?
    clasesCreadas  Clase[]     @relation("creador")
    clasesApuntado Clase[]     @relation("alumnos")

    @@unique([id, dni])
}

enum Rol {
    Administrador
    Socio
    Usuario
}

model Credencial {
    userId   String @id @db.Uuid
    dni      String @unique
    password String @db.VarChar(1023)

    usuario Usuario @relation(fields: [userId], references: [id])
}
